<odoo>

    <!-- Tree View -->
    <record id="view_account_lock_policy_list" model="ir.ui.view">
        <field name="name">account.lock.policy.list</field>
        <field name="model">account.lock.policy</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="lock_date_field" />
                <field name="days" />
                <field name="day_type" />
                <field name="months" />
                <field name="company_id" groups="base.group_multi_company" />
                <field name="active" widget="boolean_toggle" />
                <button name="button_update_lock_date" type="object" string="" title="Update Lock Date" icon="fa-refresh" />
            </list>
        </field>
    </record>

    <!-- Action Window -->
    <record id="action_account_lock_policy" model="ir.actions.act_window">
        <field name="name">Account Lock Policies</field>
        <field name="res_model">account.lock.policy</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_account_lock_policy_list" />
        <field name="context">{'active_test': False}</field>
    </record>

    <!-- Menuitem -->

    <menuitem
        id="menu_account_lock_policy"
        name="Account Lock Policies"
        action="action_account_lock_policy"
        parent="account.menu_finance_entries"
        sequence="71"
        groups="account.group_account_manager"
    />
</odoo>
