<odoo noupdate="0">

    <record model="bom.line.xform" id="match_attributes">
        <field name="name">Match Attributes</field>
        <field name="sequence">1</field>
        <field name="color">1</field>
        <field name="technical_name">match_attributes</field>
        <field name="application_point">explode</field>
        <field name="description">This transformation matches the attributes between the BoM Line Template and the BoM
            Template
        </field>
    </record>
    <record model="bom.line.xform" id="scale_weight">
        <field name="name">Scale Weight</field>
        <field name="sequence">10</field>
        <field name="color">2</field>
        <field name="technical_name">scale_weight_kg</field>
        <field name="application_point">explode</field>
        <field name="description">This transformation scales the bom_line qty by the weight of the product being
            produced.  It requires the UoM of the BoM Line to be kg.
        </field>
    </record>

</odoo>
